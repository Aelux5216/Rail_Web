@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Username" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Phone" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.Phone" class="form-control" />
                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.HouseName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.HouseName" class="form-control" />
                    <span asp-validation-for="Input.HouseName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Address1" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.Address1" class="form-control" />
                    <span asp-validation-for="Input.Address1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Address2" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.Address2" class="form-control" />
                    <span asp-validation-for="Input.Address2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Postcode" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Input.Postcode" class="form-control" />
                    <span asp-validation-for="Input.Postcode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
